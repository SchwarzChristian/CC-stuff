write("loading APIs...\n")
os.loadAPI("/APIs/Component");
os.loadAPI("/APIs/DrawingPane");
os.loadAPI("/APIs/Label");
os.loadAPI("/APIs/Window");
write("\nset path...\n")
shell.setPath("/bin:" .. shell.path());
write(shell.path())
write("\n\ndone.\n")
term.clear()
term.setCursorPos(1,1)

